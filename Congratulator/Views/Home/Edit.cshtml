@{
    ViewData["Title"] = "Редактирование события";
}
@using Network.Core.Shared  
@model Network.Core.Shared.Entities.Birthday


<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ImageFile" class=" control-label">Выберете фото</label>
        <input asp-for="ImageFile" accept="image/png,image/image,image/jpeg,image/ICO" />
        <span asp-validation-for="ImageFile" class=" text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class=" control-label">Удалить фото</label>

    </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label">Дата рождения</label>
            <input type="date" asp-for="DateOfBirth" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Фамилия и инициалы</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Relationship" class="control-label">Статус отношений</label>
            <input type="text" asp-for="Relationship" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Note" class="control-label">Заметка</label>
            <input type="text" asp-for="Note" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
</form>
<a href="@Url.Action("Index","Home")">
    Вернуться к списку
</a>

