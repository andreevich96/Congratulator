@{
    ViewData["Title"] = "Редактирование события";
}
@using Network.Core.Shared
@model Network.Core.Shared.Entities.Birthday

<div>
    <dl class="dl-horizontal">
        <dt>ФИО</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Дата рождения</dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
        <a href="@Url.Action("Index","Home")">
            Вернуться к списку
        </a>
    </div>
</div>

